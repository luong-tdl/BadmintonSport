@model IEnumerable<GraniteHouse.Models.Employee>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BirthData)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Address)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.VitriEmployeeId)
            </th>

            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @Html.DisplayFor(m => item.BirthData)
        </td>
        <td>
            @Html.DisplayFor(m => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(m => item.Address)
        </td>
        <td>
            @Html.DisplayFor(m => item.PositionEmployee.Name)
        </td>
        <td>
            <partial name="_TableButtonPartial" model="item.Id" />
        </td>
    </tr>

        }
    </table>
</div>

